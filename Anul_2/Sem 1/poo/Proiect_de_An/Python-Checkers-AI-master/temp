
import pygame
from checkers.constants import WIDTH, HEIGHT, SQUARE_SIZE, RED, WHITE
from checkers.game import Game
from minimax.algorithm import minimax
import tkinter as tk


def get_row_col_from_mouse(pos):
    x, y = pos
    row = y // SQUARE_SIZE
    col = x // SQUARE_SIZE
    return row, col

def start():
    #hide the start menu
    start_menu.withdraw()
    #start the game
    main()

def exit():
    root.destroy()

root = tk.Tk()
root.title("Joc de Dame")
root.geometry("400x400")

start_menu = tk.Toplevel(root)
start_menu.title("Start Menu")
start_menu.geometry("400x400")

label = tk.Label(start_menu, text="Bine a»õi venit la Joc de Dame!")
label.pack()

start_button = tk.Button(start_menu, text="Start", command=start)


def main():
    FPS = 60
    WIN = pygame.display.set_mode((WIDTH, HEIGHT))
    pygame.display.set_caption('Joc de Dame')
    clock = pygame.time.Clock()
    game = Game(WIN)
    run = True
    while run:
        clock.tick(FPS)
        if game.turn == WHITE:
            value, new_board = minimax(game.get_board(), 4, WHITE, game)
            game.ai_move(new_board)
        if game.winner() != None:
            print(game.winner())
            run = False
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                run = False
            if event.type == pygame.MOUSEBUTTONDOWN:
                pos = pygame.mouse.get_pos()
                row, col = get_row_col_from_mouse(pos)
                game.select(row, col)
        game.update()

root.mainloop()

pygame.quit()


main()