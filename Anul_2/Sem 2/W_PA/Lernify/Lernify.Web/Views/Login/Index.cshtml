@{
     Layout = "~/Views/Shared/_Layout_Blanck.cshtml";
     ViewBag.Title = "Login";
}

@using System.Web.Optimization
@model Lernify.Web.Models.UserLogin



<div class="container-center">
	<div class="view-header">
		<div class="header-icon">
			<i class="pe pe-7s-unlock"></i>
		</div>
		<div class="header-title">
			<h3>Login</h3>
			<small>Please enter your credentials to login.</small>
		</div>
	</div>

	<div class="panel panel-filled">
		<div class="panel-body">
			@Html.ValidationSummary(false)
			@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
			{
				@Html.AntiForgeryToken()
				<div class="form-group">
					@Html.LabelFor(m => m.Credential, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Credential, new
					{
						placeholder = "example@gmail.com",
						title = "Please enter your username",
						@class = "form-control",
						required = "required"
					})
					<span class="help-block small">Your unique username for the app</span>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Password, new { @class = "control-label" })
					@Html.PasswordFor(m => m.Password, new
					{
						@class = "form-control",
						title = "Please enter your password",
						placeholder = "******",
						required = "required"
					})
					<span class="help-block small">Your strong password</span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-accent">Login</button>
					<a class="btn btn-default" href="@Url.Action("Index", "Register")">Register</a>
					<a class="btn btn-sm btn-default" href="@Url.Action("Index", "Home")">
						<i class="fas fa-home"></i> Home
					</a>
				</div>
			}
		</div>
	</div>
</div>
<style>

     body {
          background-color: #f5f5f5;
     }

     .container-center {
          max-width: 400px;
          margin: 0 auto;
          margin-top: 10vh;
     }

     .view-header {
          text-align: center;
          margin-bottom: 30px;
     }

     .header-icon {
          font-size: 50px;
          color: #4285f4;
     }

     .header-title {
          margin-top: 15px;
     }

     .header-title h3 {
          margin: 0;
          font-size: 24px;
          font-weight: bold;
          color: #333;
     }

     .header-title small {
          color: #777;
     }

     .panel {
          border-radius: 4px;
          box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
          background-color: #fff;
     }

     .panel-body {
          padding: 30px;
     }

     .form-group {
          margin-bottom: 25px;
     }

     .control-label {
          font-weight: bold;
          color: #333;
     }

     .form-control {
          border: 1px solid #ddd;
          border-radius: 4px;
          padding: 10px;
          font-size: 14px;
     }

     .help-block {
          color: #777;
          font-size: 12px;
          margin-top: 5px;
          display: block;
     }

     .btn-accent {
          background-color: #4285f4;
          color: #fff;
          border: none;
          border-radius: 4px;
          padding: 10px 20px;
          font-size: 14px;
          font-weight: bold;
          cursor: pointer;
          transition: background-color 0.3s ease;
     }

     .btn-accent:hover {
          background-color: #3367d6;
     }

     .btn-default {
          background-color: #f5f5f5;
          color: #333;
          border: 1px solid #ddd;
          border-radius: 4px;
          padding: 10px 20px;
          font-size: 14px;
          font-weight: bold;
          cursor: pointer;
          transition: background-color 0.3s ease;
     }

     .btn-default:hover {
          background-color: #e5e5e5;
     }
</style>