@using Lernify.Domain.Enums
@model dynamic

@{
     ViewBag.Title = "_Header";
}


<div class="row align-items-center">
     <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-2 col-sm-4 col-6">
          <div class="header__left d-flex">
               <div class="logo">
                    <a href=@Url.Action("Index","Home")>
                         <img src="assets/img/logo/logo.png" alt="logo">
                    </a>
               </div>
          </div>
     </div>
     <div class="col-xxl-9 col-xl-9 col-lg-8 col-md-10 col-sm-8 col-6">
          <div class="header__right d-flex justify-content-end align-items-center">
               <div class="main-menu">
                    <nav id="mobile-menu">
                         <ul>
                              <li><a href=@Url.Action("Index","Home")>Home</a></li>
                              <li><a href=@Url.Action("Index","Course")>Courses</a></li>
                              <li><a href=@Url.Action("Index","Teacher")>Teachers</a></li>
                              <li><a href=@Url.Action("Reviews","Review")>Reviews</a></li>



                              @if (ViewBag.CurrentUser.Level == URole.Admin)
                              {
                                   <li class="has-dropdown">
                                        <a href="course-grid.html">Admin Power</a>
                                        <ul class="submenu">
                                             
                                             <li>
                                                  <a class="dropdown-item" href="@Url.Action("Index", "Admin")">User Info</a>
                                             </li>
                                                 <li>
                                                  <a class="dropdown-item" href="@Url.Action("Enrolled", "Admin")">Users's Chart List</a>
                                             </li>
                                        </ul>
                                   </li>
                              }


                              <li><a href=" @Url.Action("Index","About")">About </a></li>
                         </ul>
                    </nav>
               </div>

               @if (System.Web.HttpContext.Current.Session["LoginStatus"] == "login")
               {
                    <a href="@Url.Action("Index", "User")">

                         <span class="profile-username ml-20">@ViewBag.CurrentUser.Username</span>
                    </a>
               }
               else
               {
                    <div class="header__btn ml-20 d-none d-sm-block">
                         <a href="@Url.Action("Index", "Login")" class="e-btn" data-toggle="modal" data-target="#login-modal">Login</a>
                         <a href="@Url.Action("Index", "Register")" class="e-btn" data-toggle="modal" data-target="#register-modal">Register</a>
                    </div>
               }
               <div class="sidebar__menu d-xl-none">
                    <div class="sidebar-toggle-btn ml-30" id="sidebar-toggle">
                         <span class="line"></span>
                         <span class="line"></span>
                         <span class="line"></span>
                    </div>
               </div>
          </div>
     </div>
</div>
<div class="body-overlay"></div>
