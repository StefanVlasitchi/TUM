﻿@using Lernify.Domain.Enums
@using Lernify.Domain.Enums
@using Lernify.Web.Extension
@using Lernify.Web.Models
@model IEnumerable<CourseModel>
@{

     ViewBag.Title = "Course";
}


<!-- page title area start -->
<section class="page__title-area page__title-height page__title-overlay d-flex align-items-center" data-background="assets/img/page-title/page-title.jpg">
	<div class="container">
		<div class="row">
			<div class="col-xxl-12">
				<div class="page__title-wrapper mt-110">
					<h3 class="page__title">Courses</h3>                         
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index-1.html">Home</a></li>
							<li class="breadcrumb-item active" aria-current="page">Courses</li>
						</ol>
					</nav>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- page title area end -->

<div class="container">
	<p>

	</p>
	@if (ViewBag.CurrentUser.Level == URole.Admin)
	{
		<a href=@Url.Action("Create")>Add New Course</a>
	}
	<div class="row">
		<div class="col-xxl-12">
			<div class="tab-content" id="courseTabContent">
				<div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
					@foreach (var course in @Model)

					{
						<div class="row">

							<div class="col-xxl-12">
								<div class="course__item white-bg mb-30 fix">
									<div class="row gx-0">
										<div class="col-xxl-4 col-xl-4 col-lg-4">
											<div class="course__thumb course__thumb-list w-img p-relative fix">

												<img src="@course.ImageUrl">

											</div>
										</div>
										<div class="col-xxl-8 col-xl-8 col-lg-8">
											<div class="course__right">
												<div class="course__content course__content-3">
													<div class="course__meta d-flex align-items-center">
														<div class="course__lesson mr-20">
															<span><i class="far fa-book-alt"></i>@course.Lectures Lesson|</span>
															<span><i class="far fa-language"></i>@course.Language</span>
														</div>

													</div>
													<h3 class="course__title course__title-3">
														<a href="@Url.Action("CourseDetails", "Course", new { id = course.Id })">@course.Name</a>
													</h3>
													<div class="course__teacher d-flex align-items-center">
														<h6><a href="instructor-details-1.html">Profesor: @course.Teacher</a></h6>
													</div>

													<div class="course__summary">
														<p>@*@course.Description*@</p>
													</div>
													<p>
														-

													</p>

												</div>
												<div class="">

												</div>
												<div class="course__more course__more-2 d-flex justify-content-between align-items-center">
													<div class="course__status">
														<span>Price: @course.Price.00</span>
													</div>
													<div class="course__btn">
														<a href="@Url.Action("CourseDetails", "Course", new { id = course.Id })" class="link-btn">
															Know Details
															<i class="far fa-arrow-right"></i>
															<i class="far fa-arrow-right"></i>
														</a>
														@if (ViewBag.CurrentUser.Level == URole.Admin)
														{
															<div>
																<a href=@Url.Action("Edit", "Course", new { id = course.Id })>
																	<i class="fas fa-edit"></i>
																</a>
																<a href=@Url.Action("Details", "Course", new { id = course.Id })>
																	<i class="fas fa-eye"></i>
																</a>
																<a href=@Url.Action("Delete", "Course", new { id = course.Id })>
																	<i class="fas fa-trash-alt"></i>
																</a>
															</div>
														}
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

						</div>



					}
				</div>
			</div>

		</div>
	</div>

</div>