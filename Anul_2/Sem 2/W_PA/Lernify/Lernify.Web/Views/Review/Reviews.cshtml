@using System.Collections
@using System.Web.Optimization
@using Lernify.Domain.Enums
@model List<Lernify.Domain.Entities.Review.Review>

@{
	ViewBag.Title = "Teacher";
}


<style>
     /* Add your custom CSS styles here */

     .testimonials {
          padding: 80px 0;
          background: #f7f7f7;
     }

     .section-title {
          text-align: center;
          margin-bottom: 60px;
     }

          .section-title p {
               margin-bottom: 0;
               font-size: 18px;
               color: #888;
               text-transform: uppercase;
               font-weight: 600;
          }

     .testimonials-slider {
          display: flex;
          justify-content: center;
          align-items: center;
     }

     .testimonial-item {
          text-align: center;
          padding: 30px;
          background: #fff;
          border-radius: 8px;
          box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
          transition: all 0.3s ease;
     }

          .testimonial-item:hover {
               transform: translateY(-10px);
          }

          .testimonial-item h3 {
               margin-bottom: 15px;
               font-size: 24px;
               color: #333;
               font-weight: 600;
          }

          .testimonial-item h4 {
               margin-bottom: 10px;
               font-size: 16px;
               color: #777;
               font-weight: 400;
          }

          .testimonial-item p {
               font-size: 16px;
               color: #555;
               line-height: 1.6;
          }

     .quote-icon-left,
     .quote-icon-right {
          font-size: 36px;
          color: #888;
          vertical-align: middle;
     }

     .quote-icon-left {
          margin-right: 10px;
     }

     .quote-icon-right {
          margin-left: 10px;
     }
</style>

<section id="testimonials" class="testimonials">
     <div class="container" data-aos="zoom-in">
          <div class="section-title">
               <p>All Reviews</p>
               @if (ViewBag.CurrentUser.Level == URole.User)
               {
                    <p><a href="@Url.Action("Index", "Review")" style="color: #FF0000; font-weight: bold;">ADD a Review</a></p>

               }
          </div>


          <div class="row">
               @foreach (var review in Model)
               {
                    <div class="col-lg-4 col-md-6">
                         <div class="testimonial-item" data-aos="fade-up" data-aos-delay="100">
                              <h3>@review.Title</h3>
                              <h4>by @review.Name</h4>
                              @if (ViewBag.CurrentUser.Level == URole.Admin)
                              {
                                   <h5>@review.Email</h5>
                              }
                              <p>
                                   <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                   @review.Message
                                   <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                              </p>
                         </div>
                    </div>
               }
          </div>
     </div>
</section>
