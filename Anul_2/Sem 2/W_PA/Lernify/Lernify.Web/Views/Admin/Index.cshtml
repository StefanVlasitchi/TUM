@using Lernify.Domain.Enums
@model dynamic


@{
     ViewBag.Title = "UserManagment";
}



<section>
	<div class="container" style="margin-top: 2em; margin-bottom: 3.7em;">
		<h1>Users</h1>
          <div class="table-responsive">
               <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                         <tr>
                              <th scope="col">#Id</th>
                              <th scope="col">Username</th>
                              <th scope="col">Email</th>
                              <th scope="col">Last Login</th>
                              <th scope="col">Level</th>
                              <th scope="col">Actions</th>
                         </tr>
                    </thead>
                    <tbody>
                         @foreach (var user in @Model)
                         {
                              <tr>
                                   <th scope="User">@user.Id</th>
                                   <td>@user.Username</td>
                                   <td>@user.Email</td>
                                   <td>@user.LastLogin</td>
                                   <td>@(user.Level == URole.User ? "User" : "Admin")</td>
                                   <td>
                                        @using (Html.BeginForm("Delete", "Admin", new { id = user.Id }, FormMethod.Post))//Action Delete
                                        {
                                             <button type="submit" data-bs-toggle="modal" data-bs-target="#IdModal" class="btn btn-danger" data-toggle="tooltip" title="Delete User" id="@user.Id">
                                                  Delete
                                             </button>
                                        }
                                   </td>
                              </tr>
                         }
                    </tbody>
               </table>
               
          </div>
	</div>
</section>